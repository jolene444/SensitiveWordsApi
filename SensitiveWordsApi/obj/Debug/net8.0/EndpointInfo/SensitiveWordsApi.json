{
  "openapi": "3.0.4",
  "info": {
    "title": "SensitiveWordsApi",
    "version": "1.0"
  },
  "paths": {
    "/api/Sanitize/SanitizeText": {
      "post": {
        "tags": [
          "Sanitize"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SanitizeRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SanitizeRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SanitizeRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "deprecated": true
      }
    },
    "/api/SensitiveWords/Add": {
      "post": {
        "tags": [
          "SensitiveWords"
        ],
        "summary": "Adds a new sensitive word to the list.",
        "requestBody": {
          "description": "The word to add. Must be unique and non-empty.",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/SensitiveWords/GetAll": {
      "get": {
        "tags": [
          "SensitiveWords"
        ],
        "summary": "Retrieves all sensitive words in the list.",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/SensitiveWords/Update/{id}": {
      "put": {
        "tags": [
          "SensitiveWords"
        ],
        "summary": "Updates an existing sensitive word by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the word to update.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The new value for the word. Must be unique and non-empty.",
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            },
            "text/json": {
              "schema": {
                "type": "string"
              }
            },
            "application/*+json": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/SensitiveWords/Delete/{id}": {
      "delete": {
        "tags": [
          "SensitiveWords"
        ],
        "summary": "Deletes a sensitive word by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the word to delete.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SanitizeRequest": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}